{
  "manifest_version": 3,
  "name": "Boredom Buster",
  "version": "1.0",
  "description": "Open a new tab with 'Are you bored?' every 5 minutes.",
  "permissions": ["tabs", "alarms"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
